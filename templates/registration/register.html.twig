<div id='register_form'>
  {{ form_start(registrationForm) }}

  <div class='register_row'>
    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-address-card fa-xl"></i>
      </div>
      {{ form_row(registrationForm.nom) }}
    </div>

    <div class='input_container'> 
      <div class='form_icon'>
        <i class="fa-solid fa-address-card fa-xl"></i>
      </div>
      {{ form_row(registrationForm.prenom) }}
    </div>
  </div>

  <div class='register_row'>
    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-at"></i>
      </div>
      {{ form_row(registrationForm.email) }}
    </div>

    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-key"></i>
      </div>
      {{ form_row(registrationForm.plainPassword) }}
    </div>
  </div>

  <div class='register_row'>
    <div class='input_container input_adresse'>
        <div class='form_icon'>
          <i class="fa-solid fa-location-dot"></i>
        </div>
        {{ form_row(registrationForm.adresse) }}
      </div>
  </div>

  <div class='register_row'>
    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-city"></i>
      </div>
      {{ form_row(registrationForm.ville) }}
    </div>

    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-city"></i>
      </div>
      <div class="d-flex">
        {{ form_widget(registrationForm.code_postal) }}
        {{ form_errors(registrationForm.code_postal) }}
      </div>
    </div>
  </div>

  <div class='register_row'>
    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-cake-candles"></i>
      </div>
      <div id='registrationFormAnnee_de_naissance'>
        {{ form_widget(registrationForm.annee_de_naissance) }}
      </div>
    </div>

    <div class='input_container'>
      <div class='form_icon'>
        <i class="fa-solid fa-phone"></i>
      </div>
        {{ form_row(registrationForm.telephone) }}
    </div>
  </div>

  <div class='superior_btn_container'>
    <div class='register_btn_container'>
      <button type="submit" id="register_btn">Termin√©</button>
      <img id='loading_icon' src="{{asset('images/loading.png')}}" width="50" height="50" frameBorder="0">
    </div>
  </div>

  {{ form_end(registrationForm) }}
</div>